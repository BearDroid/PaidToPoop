<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/intro"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro"
        android:layout_margin="16dp"
        android:elevation="2dp">

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hourlyLayout"
                android:paddingBottom="72dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/hourlyEditText"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:hint="Hourly wage"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/salary"
                android:paddingBottom="0dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/salaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:hint="Salary amount"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="9"
                    />
                <EditText
                    android:id="@+id/hoursEditText"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:hint="Hours per week"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:maxLength="3"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/switchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/switchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salary mode"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/salarySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>