<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pooplist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fitsSystemWindows="true"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:scrollbarStyle="outsideOverlay">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/mainFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/colorSecondary"
        fab:fab_addButtonColorPressed="@color/colorSecondaryDark"
        fab:fab_addButtonPlusIconColor="@color/white"
        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/timerFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorSecondary"
            fab:fab_colorPressed="@color/colorSecondaryDark"
            fab:fab_icon="@drawable/ic_timer"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/editFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorSecondary"
            fab:fab_colorPressed="@color/colorSecondaryDark"
            fab:fab_icon="@drawable/ic_edit"
             />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>