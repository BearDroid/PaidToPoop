<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/salLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/salaryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/salaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="Salary per year:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/salaryEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="E.g., 20000"
            android:inputType="number"
            android:maxLength="8"
            android:paddingRight="16dp"
            android:textColorHighlight="#960e8f4f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/salaryEdit"
            android:text="$"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hourLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/salaryLayout">

        <TextView
            android:id="@+id/hourText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="Hours per week:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hourEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="E.g., 40"
            android:inputType="number"
            android:maxLength="3"
            android:paddingRight="16dp"
            android:textColorHighlight="#960e8f4f" />
    </RelativeLayout>
</RelativeLayout>
